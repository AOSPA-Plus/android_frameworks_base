<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="@string/color_picker_dialog_text" />

    <RelativeLayout
        style="?android:attr/buttonBarStyle"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/button_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/color_picker_dialog_default" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/button_ok"
            android:text="@string/color_picker_dialog_cancel" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/color_picker_dialog_ok" />

    </RelativeLayout>

</LinearLayout>
